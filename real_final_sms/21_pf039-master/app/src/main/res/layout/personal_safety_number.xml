<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:paddingHorizontal="15dp">


    <ImageButton
        android:contentDescription="뒤로가기"
        android:layout_marginTop="15dp"
        android:id="@+id/btnback"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/white"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/back_arrow" />

    <TextView
        android:contentDescription="개인안심번호 설정 페이지"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Setting_Category"
        android:text="개인 안심 번호 설정하기"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_height="5px"
        android:background="#fc5230"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <TextView
            android:layout_marginLeft="10dp"
            android:contentDescription="번호"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="번호 : "
            android:textSize="20dp" />

        <EditText
            android:background="#ffffff"
            android:paddingVertical="3dp"
            android:contentDescription="개인 안심 번호 입력"
            android:id="@+id/edtNumber"
            android:hint=" 가12나34"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/cardview_dark_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </EditText>
    </LinearLayout>

    <Button
        android:contentDescription="입력"
        android:id="@+id/btnInsert"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력"
        android:background="#fc5230"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal" >

        <EditText
            android:contentDescription="안심 번호를 설정해주세요."
            android:textAlignment="center"
            android:id="@+id/edtNumberResult"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="50dp"
            android:padding="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <Button
            android:contentDescription="초기화"
            android:id="@+id/btnInit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF947F"
            android:text="초기화" />

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="0dip"
            android:layout_height="0dip"
            />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>