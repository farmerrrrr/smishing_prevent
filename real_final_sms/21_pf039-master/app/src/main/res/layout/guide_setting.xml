<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingHorizontal="15dp">


    <ImageButton
        android:contentDescription="뒤로가기"
        android:layout_marginTop="15dp"
        android:id="@+id/btnback"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/white"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/back_arrow" />

    <TextView
        android:contentDescription="보호자 설정하기 페이지"
        style="@style/Setting_Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보호자 설정하기" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_marginVertical="10dp"
        android:background="#fc5230" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:contentDescription="보호자 추가하기"
            android:id="@+id/btnInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="보호자 추가하기" />


        <Button
            android:id="@+id/btnSelect"
            android:layout_width="0dip"
            android:layout_height="0dip" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtNameResult_1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edtNameResult_2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edtNameResult_3"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edtNameResult_4"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtNumberResult_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_weight="1"
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/edtNumberResult_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_weight="1"
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/edtNumberResult_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_weight="1"
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/edtNumberResult_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnDelete_1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="X"
                android:textSize="30dp"
                android:background="@color/white"
                android:textColor="@color/black"
                />
            <Button
                android:id="@+id/btnDelete_2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="X"
                android:textSize="30dp"
                android:background="@color/white"
                android:textColor="@color/black"
                />
            <Button
                android:id="@+id/btnDelete_3"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="X"
                android:textSize="30dp"
                android:background="@color/white"
                android:textColor="@color/black"
                />
            <Button
                android:id="@+id/btnDelete_4"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="X"
                android:textSize="30dp"
                android:textColor="@color/black"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>